<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hjy.sacore.dao.project.IUserInfoDao">
	<!-- com.hjy.sacore.entity. -->
	<resultMap id="UserResult" type="com.hjy.sacore.entity.project.UserInfo">
		<result property="id" column="id"/>
		<result property="userName" column="user_name"/>
		<result property="password" column="password"/>
		<result property="idNumber" column="id_number"/>
		<result property="sex" column="sex"/>
		<result property="birthday" column="birthday"/>
		<result property="mobile" column="mobile"/>
		<result property="email" column="email"/>
		<result property="createTime" column="create_time" />
	</resultMap>

	<select id="login" parameterType="com.hjy.sacore.entity.project.UserInfo" resultMap="UserResult">
		select * from user_info where user_name=#{userName} and password=#{password}
	</select>


	<!-- select * from user_info where sex=#{sex}  -->
	<select id="queryPage" parameterType="com.hjy.sacore.entity.project.UserInfo" resultMap="UserResult">
		select * from user_info 
	</select>








</mapper> 
